<Page x:Class="GB_ServerManager.Views.Servers"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GB_ServerManager.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Servers">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Column="1">
            <StackPanel Orientation="Vertical">
                <Label Content="Server Name:" />
                <Label Content="Server Path:" />
                <Label Content="Server Port:" />
                <Label Content="Query Port:" />
            </StackPanel>
            <StackPanel Orientation="Vertical">
                <TextBox x:Name="tbxSrvrName" Width="200" Margin="0,4,0,4"/>
                <TextBox x:Name="tbxSrvrPath" Width="200" Margin="0,4,0,4"/>
                <TextBox x:Name="tbxServerPort" Width="20" Margin="0,4,0,4" HorizontalAlignment="Left"/>
                <TextBox x:Name="tbxQueryPort" Width="20" Margin="0,4,0,4" HorizontalAlignment="Left"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
